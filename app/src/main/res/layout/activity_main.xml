<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="633dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-medium"
            android:text="@string/RUPizzeria"
            android:textColor="#BF5959"
            android:textSize="48sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="238dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="171dp"
                android:layout_height="172dp"
                android:layout_gravity="top|center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp">

                <ImageView

                    android:id="@+id/chicagoImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:background="@drawable/image_border"
                    app:srcCompat="@drawable/chicago_style_pizza" />

                <Button
                    android:id="@+id/chicagoButton"
                    android:layout_width="155dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#BF5959"
                    android:text="@string/chicagoActivityButton"
                    android:textSize="20sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="171dp"
                android:layout_height="172dp"
                android:layout_gravity="top|center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="20dp"
                android:scaleType="fitXY">

                <ImageView

                    android:id="@+id/nyImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:background="@drawable/image_border"
                    app:srcCompat="@drawable/ny_style_pizza" />

                <Button
                    android:id="@+id/newYorkButton"
                    android:layout_width="155dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#BF5959"
                    android:text="@string/newYorkActivityButton"
                    android:textSize="20sp" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shoppingCartImage"
                android:layout_width="200dp"
                android:layout_height="138dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/shopping_cart" />

            <Button
                android:id="@+id/currentOrderButton"
                android:layout_width="wrap_content"
                android:layout_height="138dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:backgroundTint="#BF5959"
                android:text="@string/currentOrderActivityButton"
                android:textSize="34sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="161dp"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/storeImage"
                android:layout_width="191dp"
                android:layout_height="138dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/store_icon" />

            <Button
                android:id="@+id/storeOrderButton"
                android:layout_width="wrap_content"
                android:layout_height="138dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:backgroundTint="#BF5959"
                android:text="@string/storeOrdersActivityButton"
                android:textSize="34sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>