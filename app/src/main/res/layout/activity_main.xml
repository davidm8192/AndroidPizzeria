<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="633dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-medium"
            android:text="RU PIZZERIA"
            android:textColor="#BF5959"
            android:textSize="48sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="238dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="171dp"
                android:layout_height="172dp"
                android:layout_gravity="top|center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp">

                <ImageView

                    android:id="@+id/chicagoImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/chicago_style_pizza" />

                <Button
                    android:id="@+id/chicagoButton"
                    android:layout_width="162dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#BF5959"
                    android:text="CHICAGO STYLE"
                    android:textSize="20sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:layout_gravity="top|center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="20dp">

                <ImageView

                    android:id="@+id/nyImage"
                    android:layout_width="280dp"
                    android:layout_height="172dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ny_style_pizza" />

                <Button
                    android:id="@+id/nyButton"
                    android:layout_width="162dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#BF5959"
                    android:text="NEW YORK STYLE"
                    android:textSize="20sp" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>